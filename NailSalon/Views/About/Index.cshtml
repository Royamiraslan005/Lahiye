@model NailSalon.Core.ViewModels.AboutVm

<section class="about-section text-center">
    <div class="container">
        <div class="about-header mb-5">
            <h2>@Model.Title</h2>
            <p>@Model.Description</p>
        </div>

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="~/Assets/images/@Model.ImageUrl" alt="@Model.Title" style="max-width: 300px;" />
        }
    </div>
</section>
