@{
    ViewData["Title"] = "Ödəniş Uğurlu";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background-color: #fff6fa;
        font-family: 'Segoe UI', sans-serif;
    }

    .payment-success-box {
        max-width: 600px;
        margin: 80px auto;
        padding: 40px;
        background-color: #ffe6f0;
        border-radius: 20px;
        box-shadow: 0 8px 24px rgba(0,0,0,0.08);
        text-align: center;
    }

        .payment-success-box h4 {
            color: #d63384;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .payment-success-box p {
            color: #5a5a5a;
            font-size: 18px;
            margin-bottom: 30px;
        }

    .btn-zodiva {
        background: linear-gradient(135deg, #fbb1d4, #fcdde8);
        color: #6d006d;
        border: none;
        padding: 12px 30px;
        border-radius: 12px;
        font-size: 16px;
        font-weight: 500;
        box-shadow: 0 4px 12px rgba(246, 153, 197, 0.3);
        transition: all 0.3s ease-in-out;
    }

        .btn-zodiva:hover {
            background: linear-gradient(135deg, #fcdde8, #fbb1d4);
            color: #4a004a;
            box-shadow: 0 6px 16px rgba(255, 173, 220, 0.45);
        }


    .emoji {
        font-size: 48px;
        margin-bottom: 20px;
    }
</style>

<div class="payment-success-box">
   
    <h4>Ödəniş uğurla tamamlandı!</h4>
    <p>Sifarişiniz qeydə alındı və tezliklə hazırlanacaq. Təşəkkür edirik, ZODIVA-nı seçdiyiniz üçün! 💖</p>
    <a class="btn btn-zodiva" href="/">Ana səhifəyə qayıt</a>
</div>

