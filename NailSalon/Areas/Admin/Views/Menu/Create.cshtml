@model NailSalon.Core.ViewModels.MenuItemVm

@{
    ViewData["Title"] = "Yeni Menyu Məhsulu Əlavə Et";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background-color: #fff0f6;
        font-family: 'Segoe UI', sans-serif;
    }

    .form-box {
        background-color: #fff;
        border-radius: 20px;
        padding: 45px;
        box-shadow: 0 12px 30px rgba(214, 51, 132, 0.08);
        max-width: 600px;
        margin: 60px auto;
    }

    h2.title {
        color: #d63384;
        text-align: center;
        margin-bottom: 30px;
        font-size: 34px;
        font-weight: 600;
    }

    label {
        color: #b03060;
        font-weight: 600;
        margin-bottom: 5px;
    }

    .form-control {
        border-radius: 12px;
        padding: 12px;
        border: 1px solid #e0e0e0;
        transition: 0.3s ease;
    }

        .form-control:focus {
            border-color: #f3accd;
            box-shadow: 0 0 0 0.2rem rgba(255, 192, 203, 0.4);
        }

    .btn-sweet {
        background-color: #f8bbd0;
        color: #6a1b4d;
        border-radius: 25px;
        padding: 10px 30px;
        font-weight: 500;
        border: none;
        transition: 0.3s ease;
    }

        .btn-sweet:hover {
            background-color: #f48fb1;
            color: white;
            transform: scale(1.03);
        }

    .btn-back {
        background-color: #ffe4ec;
        color: #a83264;
        border-radius: 25px;
        padding: 10px 28px;
        font-weight: 500;
        margin-left: 10px;
        border: none;
        transition: 0.3s ease;
    }

        .btn-back:hover {
            background-color: #f3c4d7;
            color: #6a1b4d;
        }

    .text-danger {
        font-size: 14px;
    }
</style>

<div class="form-box">
    <h2 class="title">Yeni Məhsul Əlavə Et</h2>

    <form asp-action="Create" enctype="multipart/form-data" method="post">
        <div class="mb-4">
            <label asp-for="Name" class="form-label">Məhsul Adı</label>
            <input asp-for="Name" class="form-control"  />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="FormFile" class="form-label">Şəkil Seçin</label>
            <input asp-for="FormFile" type="file" class="form-control" />
            <span asp-validation-for="FormFile" class="text-danger"></span>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-sweet">Əlavə Et</button>
            <a asp-action="Index" class="btn btn-back">Geri Qayıt</a>
        </div>
    </form>
</div>
