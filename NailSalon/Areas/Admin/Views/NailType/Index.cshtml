@using NailSalon.Core.ViewModels
@model List<NailTypeVm>

<div class="container py-5">
    <h2 class="text-center mb-5" style="color: #d63384;"> Dırnaq Növləri</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="bg-white p-3 text-center shadow rounded">
                    <div class="zoom-effect">
                        <img width="200px" height="200px" src="~/images/@item.ImageUrl" alt="@item.Title" class="img-fluid nail-image" />
                    </div>
                    <h4 class="mt-3">@item.Title</h4>
                    <p class="card-text">💰 Qiymət: @item.Price AZN</p>
                    <div class="mt-3">
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-update me-2">Update</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-delete" onclick="return confirm('Silmək istədiyinizə əminsiniz?')">Delete</a>

                    </div>
                </div>
            </div>
        }
    </div>
    <div class="text-center mt-4">
        <a asp-action="Create" class="btn btn-add-nailtype">
            ➕ Yeni Dırnaq Növü Əlavə Et
        </a>
    </div>

</div>

<style>
    .nail-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 10px;
    }

    .btn-add-nailtype {
        background-color: #f8c1d8;
        color: #8b2d56;
        font-weight: 600;
        font-size: 15px;
        padding: 10px 22px;
        border-radius: 12px;
        border: none;
        transition: background-color 0.3s ease, transform 0.2s ease;
        box-shadow: 0 4px 12px rgba(248, 193, 216, 0.4);
    }

        .btn-add-nailtype:hover {
            background-color: #f4a8c4;
            color: #6e2042;
            transform: translateY(-2px);
            text-decoration: none;
        }


    .btn-update {
        background-color: #ffe58f;
        color: #5c4400;
        border: none;
        padding: 6px 14px;
        border-radius: 10px;
        font-size: 13px;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

        .btn-update:hover {
            background-color: #ffd666;
            color: #5c4400;
        }

    .btn-delete {
        background-color: #ffccc7;
        color: #820014;
        border: none;
        padding: 6px 14px;
        border-radius: 10px;
        font-size: 13px;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

        .btn-delete:hover {
            background-color: #ffa39e;
            color: #820014;
        }
</style>

